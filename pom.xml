	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.2.5</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>

	<groupId>org.woodwhales</groupId>
	<artifactId>woodwhales-music</artifactId>
	<version>3.7.3</version>
	<name>woodwhales-music</name>
	<description>woodwhales-music 基于 SpringBoot 的开源超简洁音乐播放器 A open source Music Player developed based on Java SpringBoot</description>

	<developers>
		<developer>
			<name>woodwhales</name>
			<organizationUrl>https://woodwhales.cn</organizationUrl>
		</developer>
	</developers>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.encoding>UTF-8</maven.compiler.encoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>17</java.version>
	</properties>

